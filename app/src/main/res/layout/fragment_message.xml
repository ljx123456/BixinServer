<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="44dp"
        android:background="@color/white">
        <com.androidkun.xtablayout.XTabLayout
            android:id="@+id/messageTab"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_centerHorizontal="true"
            android:background="@color/white"
            app:xTabIndicatorColor="#FE849B"
            app:xTabIndicatorHeight="2dp"
            app:xTabIndicatorWidth="2dp"
            app:xTabMode="fixed"
            app:xTabSelectedTextColor="#FE849B"
            app:xTabSelectedTextSize="16dp"
            app:xTabTextColor="#8B8B8B"
            app:xTabTextSize="14dp"
            app:xTabTextSelectedBold="true"
            app:xTabTextBold="false"/>
        
        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:gravity="center_vertical|right"
            android:text="清空"
            android:textColor="#ff535252"
            android:textSize="12dp"
            android:id="@+id/tv_clear"/>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/messageLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>