<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:background="@color/white"
    android:orientation="vertical">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/yueServeImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="6dp"
        android:scaleType="centerCrop"
        android:src="#E1E1E1"
        app:riv_oval="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/yueServeImage"
        android:orientation="vertical">

        <TextView
            android:id="@+id/yueServeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="8dp"
            android:text="青苔"
            android:textColor="#333333"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="女 21岁 白羊座"
            android:textColor="#ff8b8b8b"
            android:textSize="10dp"
            android:id="@+id/yueServeContent"/>
    </LinearLayout>

    <TextView
        android:id="@+id/yueServeAdds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/yueServeImage"
        android:layout_toRightOf="@+id/yueServeImage"
        android:text="(距离约玩场地约12km)"
        android:textColor="#ff999999"
        android:textSize="13dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/yueServeMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/yueServeDell"
        android:text="¥880.00"
        android:textColor="#ffff6464"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/yueServeDell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="15dp"
        android:src="@mipmap/icon_close" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#E1E1E1" />
</RelativeLayout>