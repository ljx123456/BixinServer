<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECF0F4"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@color/white">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入经纪人ID"
            android:textSize="16dp"
            android:textColorHint="#8B8B8B"
            android:theme="@style/inputStyle"
            android:background="@null"
            android:maxLength="7"
            android:textColor="#535252"
            android:id="@+id/edt_serve_set_leader"
            android:inputType="number"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:text="搜索"
            android:textColor="#84CEFE"
            android:textSize="12dp"
            android:id="@+id/tv_serve_set_leader_search" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:lineSpacingExtra="6dp"
        android:text="您可以通过搜索达人经纪人的ID或扫描经纪人ID二维码进行绑定。"
        android:textColor="#ff8b8b8b"
        android:textSize="11dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/white"
        android:layout_marginTop="44dp"
        android:orientation="vertical"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:id="@+id/layout_serve_set_leader_search"
        android:visibility="gone">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="达人经纪人"
                android:textColor="#ff535252"
                android:textSize="16dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp">
            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                app:riv_oval="true"
                android:id="@+id/serveSetLeaderImg"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/serveSetLeaderImg"
                android:layout_marginLeft="6dp"
                android:layout_centerVertical="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="浪子"
                    android:textColor="#ff535252"
                    android:textSize="13dp"
                    android:id="@+id/tv_serve_set_leader_name"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="男 28岁 射手座"
                    android:textColor="#ff8b8b8b"
                    android:textSize="10dp"
                    android:id="@+id/tv_serve_set_leader_content"/>
            </LinearLayout>


            <TextView
                android:layout_width="56dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="绑定"
                android:textColor="#ffffffff"
                android:textSize="13dp"
                android:background="@drawable/login_btn_code"
                android:id="@+id/tv_serve_set_leader_bind"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:orientation="vertical"
        android:id="@+id/layout_serve_set_leader_search_none"
        android:visibility="gone">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/search"
                android:scaleType="centerInside"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="比心号不存在或对方还不是经纪人"
                android:textColor="#ffcccccc"
                android:textSize="13dp"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>