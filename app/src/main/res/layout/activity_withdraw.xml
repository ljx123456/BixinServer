<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECF0F4"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@drawable/item_bg"
        android:id="@+id/layout_type">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="提现到："
            android:textColor="#ff535252"
            android:textSize="13dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@mipmap/more"
            android:drawablePadding="6dp"
            android:text="微信昵称（微信）"
            android:textColor="#ff535252"
            android:textSize="13dp"
            android:id="@+id/tv_withdraw_account"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@drawable/item_bg"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="提现金额："
                android:textColor="#ff535252"
                android:textSize="13dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="预计2小时内到账"
                android:textColor="#ff8b8b8b"
                android:textSize="12dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="14dp"
                android:text="¥"
                android:textColor="#ff535252"
                android:textSize="20dp"
                android:id="@+id/tv_withdraw"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"
                android:layout_marginLeft="24dp"
                android:background="@null"
                android:textColor="#ff535252"
                android:textSize="32dp"
                android:id="@+id/edt_withdraw"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffe4e4ef"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:id="@+id/layout_withdraw_money">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="余额：0.00"
                android:textColor="#ff8b8b8b"
                android:textSize="12dp"
                android:id="@+id/tv_withdraw_money"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:text="全部提现"
                android:textColor="#ff84cefe"
                android:textSize="12dp"
                android:id="@+id/tv_withdraw_all"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="输入金额超过剩余金额"
                android:textColor="#ffff6464"
                android:textSize="12dp"
                android:id="@+id/tv_withdraw_tips"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
    
    <Button
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="52dp"
        android:enabled="false"
        android:background="@drawable/login_btn_code_bg"
        android:text="提现"
        android:textColor="#ffffffff"
        android:textSize="16dp"
        android:id="@+id/btn_withdraw"/>

</LinearLayout>