<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ECF0F4">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/item_bg"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/red_dot_bg"
                android:id="@+id/tv_noti_dot"
                android:visibility="visible"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="恭喜您成为约玩达人"
                android:textColor="#ff535252"
                android:textSize="16dp"
                android:textStyle="bold"
                android:id="@+id/tv_noti_title"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="03-22 18:24"
                android:textColor="#ff8b8b8b"
                android:textSize="12dp"
                android:id="@+id/tv_noti_time"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="12dp"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="12dp"
                android:text="已通过审核，快快前去约玩吧~"
                android:textColor="#ff8b8b8b"
                android:textSize="13dp"
                android:id="@+id/tv_noti_content"
                />
            <ImageView
                android:layout_width="12dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_marginRight="12dp"
                android:src="@mipmap/double_more_button_down"
                android:scaleType="centerInside"
                android:id="@+id/iv_noti_content"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>