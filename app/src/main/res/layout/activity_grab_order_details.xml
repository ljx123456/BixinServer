<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:background="#F6F6FA">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="184dp"
                android:orientation="vertical"
                android:background="@drawable/grab_order_bg">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/nav_button_back_white_nor"
                        android:scaleType="centerInside"
                        android:paddingRight="12dp"
                        android:id="@+id/grabOrderDetailsBack"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="抢单详情"
                        android:textColor="#ffffffff"
                        android:textSize="16dp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical"
                        android:id="@+id/orderFormDetailsRateLayout1"
                        android:visibility="visible">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="24dp"

                            android:orientation="horizontal"
                            android:paddingLeft="35dp"
                            android:paddingRight="35dp">
                            <TextView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:gravity="center"
                                android:text="1"
                                android:textColor="#84CEFE"
                                android:textSize="16sp"
                                android:background="@drawable/tv_order_form_details_bg"
                                android:id="@+id/orderFormDetailsRate1"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="1.5dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/tv_order_form_line_default"
                                    android:id="@+id/orderFormDetailsRateLine2"/>
                                <TextView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:gravity="center"
                                    android:text="2"
                                    android:textColor="#ffffff"
                                    android:textSize="16sp"
                                    android:background="@drawable/tv_order_form_details_default_bg"
                                    android:id="@+id/orderFormDetailsRate2"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="1.5dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/tv_order_form_line_default"
                                    android:id="@+id/orderFormDetailsRateLine3"/>
                                <TextView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:gravity="center"
                                    android:text="3"
                                    android:textColor="#ffffff"
                                    android:textSize="16sp"
                                    android:background="@drawable/tv_order_form_details_default_bg"
                                    android:id="@+id/orderFormDetailsRate3"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="1.5dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/tv_order_form_line_default"
                                    android:id="@+id/orderFormDetailsRateLine4"/>
                                <TextView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:gravity="center"
                                    android:text="4"
                                    android:textColor="#ffffff"
                                    android:textSize="16sp"
                                    android:background="@drawable/tv_order_form_details_default_bg"
                                    android:id="@+id/orderFormDetailsRate4"/>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="等待抢单"
                                android:textColor="#ffffffff"
                                android:textSize="12dp"
                                android:id="@+id/orderFormDetailsRateText1"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="抢单成功"
                                android:textColor="#80ffffff"
                                android:textSize="12dp"
                                android:id="@+id/orderFormDetailsRateText2"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="约玩进行中"
                                android:textColor="#80ffffff"
                                android:textSize="12dp"
                                android:id="@+id/orderFormDetailsRateText3"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="约玩结束"
                                android:textColor="#80ffffff"
                                android:textSize="12dp"
                                android:id="@+id/orderFormDetailsRateText4"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical"
                        android:id="@+id/orderFormDetailsRateLayout2"
                        android:visibility="gone">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:orientation="horizontal">
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:gravity="center"
                                    android:text="1"
                                    android:textColor="#ffffff"
                                    android:layout_centerHorizontal="true"
                                    android:textSize="16sp"
                                    android:background="@drawable/tv_order_form_details_default_bg"
                                    android:id="@+id/tv1"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="1.5dp"
                                    android:layout_toRightOf="@+id/tv1"
                                    android:layout_centerVertical="true"
                                    android:background="@drawable/tv_order_form_line"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:gravity="center"
                                    android:text="2"
                                    android:textColor="#84CEFE"
                                    android:layout_centerHorizontal="true"
                                    android:textSize="16sp"
                                    android:background="@drawable/tv_order_form_details_bg"
                                    android:id="@+id/tv2"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="1.5dp"
                                    android:layout_toLeftOf="@+id/tv2"
                                    android:layout_centerVertical="true"
                                    android:background="@drawable/tv_order_form_line"/>
                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="等待抢单"
                                android:textColor="#80ffffff"
                                android:textSize="12dp"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="抢单超时"
                                android:textColor="#ffffffff"
                                android:textSize="12dp"
                                android:id="@+id/tv_grab_order_state"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical"
                        android:id="@+id/orderFormDetailsRateLayout3"
                        android:visibility="gone">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="80dp"
                            android:layout_marginRight="80dp">
                            <TextView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:gravity="center"
                                android:text="1"
                                android:textColor="#ffffff"
                                android:layout_centerVertical="true"
                                android:textSize="16sp"
                                android:background="@drawable/tv_order_form_details_default_bg"
                                android:id="@+id/tvv1"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="1.5dp"
                                android:layout_toRightOf="@+id/tvv1"
                                android:layout_toLeftOf="@+id/tvv2"
                                android:layout_centerVertical="true"
                                android:background="@drawable/tv_order_form_line"/>
                            <TextView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:gravity="center"
                                android:text="2"
                                android:textColor="#ffffff"
                                android:layout_centerHorizontal="true"
                                android:textSize="16sp"
                                android:background="@drawable/tv_order_form_details_default_bg"
                                android:id="@+id/tvv2"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="1.5dp"
                                android:layout_toRightOf="@+id/tvv2"
                                android:layout_toLeftOf="@+id/tvv3"
                                android:layout_centerVertical="true"
                                android:background="@drawable/tv_order_form_line"/>
                            <TextView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:gravity="center"
                                android:text="3"
                                android:textColor="#84CEFE"
                                android:layout_alignParentRight="true"
                                android:textSize="16sp"
                                android:background="@drawable/tv_order_form_details_bg"
                                android:id="@+id/tvv3"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginLeft="70dp"
                            android:layout_marginRight="70dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="等待抢单"
                                android:textColor="#80ffffff"
                                android:textSize="12dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="抢单成功"
                                android:layout_centerHorizontal="true"
                                android:textColor="#80ffffff"
                                android:textSize="12dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="订单取消"
                                android:textColor="#ffffffff"
                                android:textSize="12dp"/>
                        </RelativeLayout>

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:orientation="vertical"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:background="@drawable/item_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_gravity="center_vertical"
                    android:text="约玩活动："
                    android:textColor="#ff8b8b8b"
                    android:textSize="13dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_gravity="center_vertical"
                    android:text="纵享欢唱"
                    android:textColor="#ff535252"
                    android:textSize="13dp"
                    android:id="@+id/orderFormDetailsName"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_marginRight="12dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="等待抢单"
                        android:textColor="#ffff6464"
                        android:textSize="13dp"
                        android:id="@+id/orderFormDetailsState"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(4:59后失效)"
                        android:textColor="#ff8b8b8b"
                        android:textSize="12dp"
                        android:id="@+id/orderFormDetailsStateTips"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="96dp"
                android:layout_marginRight="12dp"
                android:background="#E4E4EF"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_gravity="center_vertical"
                    android:text="需求包房："
                    android:textColor="#ff8b8b8b"
                    android:textSize="13dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_gravity="center_vertical"
                    android:text="0.00元"
                    android:textColor="#ff535252"
                    android:textSize="13dp"
                    android:id="@+id/orderFormDetailsMoney"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="下单时间："
                        android:textColor="#ff8b8b8b"
                        android:textSize="12dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="48dp"
                        android:text="2019-03-24 22:32"
                        android:textColor="#ff535252"
                        android:textSize="12dp"
                        android:id="@+id/orderFormDetailsOrderTime"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="约玩场地："
                        android:textColor="#ff8b8b8b"
                        android:textSize="12dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="48dp"
                        android:text=""
                        android:textColor="#ff535252"
                        android:textSize="12dp"
                        android:id="@+id/orderFormDetailsKTV"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="详细地址："
                        android:textColor="#ff8b8b8b"
                        android:textSize="12dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="48dp"
                        android:text="成都市武侯区啥子啥子路128号某某地方"
                        android:textColor="#ff535252"
                        android:textSize="12dp"
                        android:id="@+id/orderFormDetailsAddress"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:id="@+id/grabOrderDetailsAcceptLayout">
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="抢单时间："
                        android:textColor="#ff8b8b8b"
                        android:textSize="12dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="48dp"
                        android:text=""
                        android:textColor="#ff535252"
                        android:textSize="12dp"
                        android:id="@+id/orderFormDetailsBoxType"/>

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:id="@+id/orderFormDetailsBtnLayout">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:id="@+id/orderFormDetailsStartTimeLayout">
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="预约时间："
                        android:textColor="#ff8b8b8b"
                        android:textSize="12dp"
                        android:id="@+id/orderFormDetailsStartTimeTitle"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="48dp"
                        android:text="2019-03-24 22:32"
                        android:textColor="#ff535252"
                        android:textSize="12dp"
                        android:id="@+id/orderFormDetailsStartTime"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:id="@+id/orderFormDetailsEndTimeLayout">
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="距离："
                        android:textColor="#ff8b8b8b"
                        android:textSize="12dp"
                        android:id="@+id/orderFormDetailsEndTimeTitle"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="48dp"
                        android:text="0.0km"
                        android:textColor="#ff535252"
                        android:textSize="12dp"
                        android:id="@+id/orderFormDetailsEndTime"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:id="@+id/orderFormDetailsOrderNoLayout">
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="订单号："
                        android:textColor="#ff8b8b8b"
                        android:textSize="12dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="48dp"
                        android:text="888"
                        android:textColor="#ff535252"
                        android:textSize="12dp"
                        android:id="@+id/orderFormDetailsOrderNum"/>

                </LinearLayout>


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="46dp"
                />

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:gravity="center_vertical|right">

        <Button
            android:layout_width="72dp"
            android:layout_height="28dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/btn_order_form_list_default"
            android:text="拒绝订单"
            android:textColor="#ff535252"
            android:textSize="13dp"
            android:id="@+id/orderFormDetailsBtn1"
            android:visibility="gone"/>


        <Button
            android:layout_width="72dp"
            android:layout_height="28dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/btn_order_form_list_default"
            android:text="导航"
            android:textColor="#ff535252"
            android:textSize="13dp"
            android:id="@+id/orderFormDetailsBtn2"
            android:visibility="gone"/>

        <Button
            android:layout_width="72dp"
            android:layout_height="28dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/btn_order_form_list_default"
            android:text="联系Ta"
            android:textColor="#ff535252"
            android:textSize="13dp"
            android:id="@+id/orderFormDetailsBtn3"
            android:visibility="gone"/>

        <Button
            android:layout_width="72dp"
            android:layout_height="28dp"
            android:background="@drawable/btn_order_form_list_bg"
            android:layout_marginRight="12dp"
            android:enabled="true"
            android:text="接受订单"
            android:textColor="#ffffffff"
            android:textSize="13dp"
            android:id="@+id/orderFormDetailsBtn4"
            android:visibility="gone"/>




    </LinearLayout>

</LinearLayout>